<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="customMontserratRegular" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Montserrat-Regular.ttf</item>
    </style>

    <style name="customBarlowRegular" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Barlow-Regular.ttf</item>
    </style>

    <style name="customMontserratBold" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Montserrat-Bold.ttf</item>
    </style>

    <style name="customMontserratSemiBold" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Montserrat-SemiBold.ttf</item>
    </style>


    <style name="customMontserratLight" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Montserrat-Light.ttf</item>
    </style>

    <style name="spinner_country" parent="android:Theme.Light">
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="search_bar" parent="android:Theme.Light">
        <item name="android:background">@drawable/custom_search_bar</item>
        <item name="android:textColor">@color/black</item>
    </style>



    <style name="loginButton">
        <item name="android:background">@color/loginBtn</item>
        <item name="android:layout_margin">@dimen/dimen_75</item>
        <item name="android:padding">@dimen/dim_10</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/btn_login</item>
        <item name="android:textAppearance">@style/customMontserratRegular</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="customDialog" parent="AlertDialog.AppCompat">

        <item name="android:layout_marginLeft">@dimen/dialog_margin_left</item>
        <item name="android:layout_marginRight">@dimen/dialog_margin_right</item>
        <!--<item name="android:radius">@dimen/dialog_margin_radius</item>-->
    </style>


</resources>
