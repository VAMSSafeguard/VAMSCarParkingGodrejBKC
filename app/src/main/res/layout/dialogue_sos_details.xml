<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvHeader"
            style="@style/customMontserratSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:layout_weight="1"
            android:text="Are you sure you want to send an alert?"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/dim_8"
        android:background="@color/gray" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/tvHeader"
        android:layout_weight="9"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:fillViewport="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dim_25">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:weightSum="@integer/weightsum_10">

                    <TextView
                        android:id="@+id/tvAdmin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="7"
                        android:singleLine="false"
                        android:text="ADMIN"
                        android:textAppearance="@style/customMontserratRegular"
                        android:textColor="#000" />


                    <CheckBox
                        android:id="@+id/adminCheckbox"
                        android:layout_width="0dp"
                        android:checked="true"
                        android:layout_height="wrap_content"
                        android:layout_weight="3" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:weightSum="@integer/weightsum_10">

                    <TextView
                        android:id="@+id/tvSheriff"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="7"
                        android:singleLine="false"
                        android:text="SHERIFF"
                        android:textAppearance="@style/customMontserratRegular"
                        android:textColor="#000" />


                    <CheckBox
                        android:id="@+id/sheriffCheckbox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="right"
                    android:orientation="horizontal"
                    android:weightSum="@integer/weightsum_10">

                    <Button
                        android:id="@+id/btnCancelDialog"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="4"
                        android:background="@color/red"
                        android:text="CANCEL"
                        android:textAllCaps="true"
                        android:textAppearance="@style/customMontserratBold"
                        android:textColor="@color/logintxtColor"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnYes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="50dp"
                        android:layout_weight="4"
                        android:background="@color/loginBtn"
                        android:text="YES"
                        android:textAllCaps="true"
                        android:textAppearance="@style/customMontserratBold"
                        android:textColor="@color/logintxtColor"
                        android:textSize="14sp" />


                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>