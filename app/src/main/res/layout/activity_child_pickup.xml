<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_visitorEntryActivityOne"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_createAppointmentActivityOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_createAppointmentActivityOne"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="@dimen/abc_action_bar_default_height_material">
            <!--<ImageView
                android:id="@+id/placeSelectionActivityBackImage"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:src="@drawable/back" />-->
            <ImageView
                android:id="@+id/ivLogo_ChildPickUp"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/zkteco_logo" />

            <ImageView
                android:id="@+id/ivReset_ChildPickup"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_gravity="start"
                android:tint="@color/colorAccent"
                android:visibility="visible"
                android:src="@drawable/home" />
            <ImageView
                android:id="@+id/ivSos"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_sos" />

        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_createAppointmentActivityOne"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:orientation="vertical"
            android:padding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="@dimen/dim_16"
                android:orientation="horizontal"
                android:weightSum="@integer/weightsum_10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:singleLine="false"
                    android:text="@string/studentname"
                    android:textAppearance="@style/customMontserratRegular"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <AutoCompleteTextView
                    android:id="@+id/act_studentName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="5.5"
                    android:background="@drawable/edittext_focude_effect"
                    android:digits="@string/visitor_name_digits"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="@integer/visitorName"
                    android:singleLine="true"
                    android:textAppearance="@style/customMontserratRegular"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="0.5"
                    android:text="*"
                    android:textAlignment="center"
                    android:textColor="@color/blueColor"
                    android:textSize="20sp" />

            </LinearLayout>


            <ScrollView
                android:id="@+id/sv_main"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/llMainlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_bg_default"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tvStudentsTag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/student_details"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textAppearance="@style/customMontserratSemiBold"

                            android:textColor="@color/blueColor"
                            android:textSize="15sp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="visible">


                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/cvStudentProfile"
                                    android:layout_width="@dimen/dimen_75"
                                    android:layout_height="@dimen/dimen_75"
                                    android:layout_margin="8dp"
                                    android:src="@drawable/profile" />

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:orientation="vertical"
                                    android:padding="10dp">

                                    <TextView
                                        android:id="@+id/tvStudentName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="@style/customMontserratRegular"
                                        android:textSize="@dimen/dim_14"/>

                                    <TextView
                                        android:id="@+id/tvStudentMobile"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:visibility="gone"
                                        android:textAppearance="@style/customMontserratRegular"
                                         />


                                    <TextView
                                        android:id="@+id/tvStudentClass"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:textAppearance="@style/customMontserratRegular"
                                         />


                                    <TextView
                                        android:id="@+id/tvStudentId"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:textAppearance="@style/customMontserratRegular"
                                         />


                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_ParentsTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dim_8"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvParentsTag"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/parentsallowed"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textAppearance="@style/customMontserratSemiBold"
                            android:textColor="@color/blueColor"
                            android:textSize="15sp" />
                    </LinearLayout>



                    <TextView
                        android:id="@+id/tvNoDataFound"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="@string/no_data_found"
                        android:textAlignment="center"
                        android:textSize="20sp" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_Parents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edittext_bg_default"
                        android:layout_marginRight="0dp"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/dim_16" />

                    <LinearLayout
                        android:id="@+id/ll_NotAllowedParentsTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dim_8"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvNotAllowedParentsTag"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/notparentsallowed"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textAppearance="@style/customMontserratSemiBold"
                            android:textColor="@color/blueColor"
                            android:textSize="15sp" />
                    </LinearLayout>



                    <TextView
                        android:id="@+id/tvNotAllowedDataFound"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="@string/no_data_found"
                        android:textAlignment="center"
                        android:textSize="20sp" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_NotAllowedParents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edittext_bg_default"
                        android:layout_marginRight="0dp"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/dim_16" />

                    <!--<include layout="@layout/parents_details_row" />

                    <include layout="@layout/parents_details_row" />

                    <include layout="@layout/parents_details_row" />-->





<!--
                    <LinearLayout
                        android:id="@+id/ll_TeachersTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dim_8"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvTechersTag"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/teachers_details"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@color/blueColor"
                            android:textSize="15sp" />
                    </LinearLayout>
-->



                    <LinearLayout
                        android:id="@+id/llTeacherlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/edittext_bg_default"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvTechersTag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/teachers_details"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textAppearance="@style/customMontserratSemiBold"
                            android:layout_gravity="center"
                            android:textColor="@color/blueColor"
                            android:textSize="15sp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="visible">


                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/cv_teacherProfileImage"
                                    android:layout_width="@dimen/dimen_75"
                                    android:layout_height="@dimen/dimen_75"
                                    android:layout_margin="8dp"
                                    android:src="@drawable/profile" />

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:orientation="vertical"
                                    android:padding="10dp">

                                    <TextView
                                        android:id="@+id/tvTeacherId"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:visibility="gone"
                                        android:textAppearance="@style/customMontserratRegular"
                                        android:textSize="@dimen/dim_14"/>

                                    <TextView
                                        android:id="@+id/tvTeacherName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="@style/customMontserratRegular" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>
            </ScrollView>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>