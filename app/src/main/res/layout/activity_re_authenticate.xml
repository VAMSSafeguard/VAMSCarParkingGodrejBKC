<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_visitorEntryActivityOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_visitorEntryActivityOne"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="@dimen/abc_action_bar_default_height_material">

            <ImageView
                android:id="@+id/imgBackImage"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:src="@drawable/back" />

            <ImageView
                android:id="@+id/ivLogo_reAuthenticateActivity"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_godrejlogo" />
            <ImageView
                android:id="@+id/ivSos"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_sos" />

        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_visitorEntryActivityOne"
        android:layout_margin="@dimen/dim_8"
        android:background="@color/white"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/white"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/dim_10">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_Image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imgAuthenticate"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_gravity="bottom|center_horizontal"
                                android:padding="5dp"
                                android:src="@drawable/profile" />


                            <TextView
                                android:id="@+id/tvTakePhotoTextVisitorEntry"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:visibility="gone"
                                android:text="@string/take_photo"
                                android:textAlignment="center"
                                android:textColor="@color/blueColor" />

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:id="@+id/ll_ReAuthMobileNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dim_16"
                            android:orientation="horizontal"
                            android:weightSum="@integer/weightsum_10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="4"
                                android:singleLine="false"
                                android:text="@string/cell_number"
                                android:textAppearance="@style/customMontserratRegular"
                                android:textColor="@color/black" />

                            <LinearLayout
                                android:id="@+id/llAuthFlagIsd"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:layout_marginLeft="@dimen/dim_4"
                                android:background="@drawable/edittext_focude_effect_for_isd"
                                android:orientation="horizontal"
                                android:padding="5dp"
                                android:weightSum="1">

                            <ImageView
                                android:id="@+id/ivIsdFlag"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                app:srcCompat="@drawable/ic_india" />


                            <AutoCompleteTextView
                                android:id="@+id/actvIsd"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:background="@null"
                                android:gravity="center"
                                android:imeOptions="actionNext"
                                android:inputType="phone"
                                android:maxLength="@integer/isdMaxLength"
                                android:nextFocusDown="@id/etvisitorEntryMobileNo"
                                android:singleLine="true"
                                android:text="+91"
                                android:textAlignment="center"
                                android:textAppearance="@style/customMontserratRegular"
                                android:visibility="visible" />

                            </LinearLayout>

                            <EditText
                                android:id="@+id/etMobileNo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="1dp"
                                android:layout_weight="3"
                                android:background="@drawable/edittext_focude_effect"
                                android:imeOptions="actionNext"
                                android:inputType="phone"
                                android:nextFocusDown="@id/etvisitorEntryEmail"
                                android:singleLine="true"
                                android:textAppearance="@style/customMontserratRegular" />



                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_ReAuthEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal"
                            android:weightSum="@integer/weightsum_10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="4"
                                android:singleLine="false"
                                android:text="@string/emaill"
                                android:textAppearance="@style/customMontserratRegular"
                                android:textColor="@color/black" />

                            <EditText
                                android:id="@+id/etReAuthEmail"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="6"
                                android:background="@drawable/edittext_focude_effect"
                                android:digits="@string/emailDigits"
                                android:imeOptions="actionNext"
                                android:inputType="textEmailAddress"
                                android:nextFocusDown="@id/etvisitorEntryCompanyName"
                                android:singleLine="true"
                                android:textAppearance="@style/customMontserratRegular" />


                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="4"
                                android:singleLine="false"
                                android:text="@string/first_name"
                                android:textAppearance="@style/customMontserratRegular"
                                android:textColor="@color/black" />

                            <EditText
                                android:id="@+id/etFirstName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_weight="6"
                                android:background="@drawable/edittext_focude_effect"
                                android:digits="@string/visitor_name_digits"
                                android:imeOptions="actionNext"
                                android:inputType="textCapWords"
                                android:nextFocusDown="@id/actvIsd"
                                android:singleLine="true"
                                android:text=""
                                android:textAppearance="@style/customMontserratLight" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="@integer/weightsum_10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="4"
                                android:singleLine="false"
                                android:text="@string/last_name"
                                android:textAppearance="@style/customMontserratRegular"
                                android:textColor="#000" />

                            <EditText
                                android:id="@+id/etLastName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_weight="6"
                                android:background="@drawable/edittext_focude_effect"
                                android:digits="@string/companyDigits"
                                android:imeOptions="actionNext"
                                android:inputType="textCapWords"
                                android:singleLine="true"
                                android:textAppearance="@style/customMontserratRegular" />


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/llSmsKey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal"
                            android:weightSum="@integer/weightsum_10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="4"
                                android:singleLine="false"
                                android:text="@string/authenticatioKey"
                                android:textAppearance="@style/customMontserratRegular"
                                android:textColor="@color/black" />

                            <EditText
                                android:id="@+id/etReAuthenticateKey"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dim_4"
                                android:layout_weight="6"
                                android:background="@drawable/edittext_focude_effect"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="@integer/otpLength"
                                android:singleLine="true"
                                android:textAppearance="@style/customMontserratRegular"
                                android:textSize="20sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="18dp"
                            android:weightSum="1"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <Button
                                android:id="@+id/btnResendKey"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:background="@color/colorPrimaryDark"
                                android:text="@string/resendotp"
                                android:layout_marginRight="@dimen/dim_10"
                                android:textAppearance="@style/customMontserratBold"
                                android:textColor="@color/logintxtColor" />

                            <Button
                                android:id="@+id/btnDeleteRegistration"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:background="@color/loginBtn"
                                android:layout_marginLeft="@dimen/dim_10"
                                android:text="@string/re_authenticate"
                                android:textAppearance="@style/customMontserratBold"
                                android:textColor="@color/logintxtColor" />


                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>