<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_visitorEntryActivityOne"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_visitorEntryActivityOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_visitorEntryActivityOne"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="@dimen/abc_action_bar_default_height_material">
            <!--<ImageView
                android:id="@+id/placeSelectionActivityBackImage"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:src="@drawable/back" />-->
            <ImageView
                android:id="@+id/ivLogo_visitorEntryActivity"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/zkteco_logo" />

            <ImageView
                android:id="@+id/ivReset_visitorEntryActivityOne"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_gravity="start"
                android:src="@drawable/home"
                android:tint="@color/colorAccent" />
            <ImageView
                android:id="@+id/ivSos"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_sos" />

        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_visitorEntryActivityOne"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_takeImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivFirstImage_visitorEntryActivityOne"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:padding="5dp"
                            android:src="@drawable/capture_with_blue_background" />


                        <TextView
                            android:id="@+id/tvTakePhotoTextVisitorEntry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/live_picture"
                            android:textAlignment="center"
                            android:textColor="@color/blueColor"></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_registerImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivLastImage_visitorEntryActivityOne"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:src="@drawable/capture_with_blue_background" />

                        <TextView
                            android:id="@+id/tv_Registered_Image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/saved_picture"
                            android:textAlignment="center"
                            android:textColor="@color/blueColor"></TextView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:id="@+id/ll_complexName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_16"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="@integer/weightsum_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="4"
                            android:editable="false"
                            android:singleLine="false"
                            android:text="@string/visitorcomplexName"
                            android:textAppearance="@style/customMontserratRegular"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/etvisitorEntrycomplexName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5.8"
                            android:background="@drawable/edittext_focude_effect"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:nextFocusDown="@id/etvisitorEntryFirstName"
                            android:singleLine="true"
                            android:textAppearance="@style/customMontserratRegular" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_tenantName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_16"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="@integer/weightsum_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="4"
                            android:singleLine="false"
                            android:text="@string/visitortenantName"
                            android:textAppearance="@style/customMontserratRegular"
                            android:textColor="@color/black" />

                        <AutoCompleteTextView
                            android:id="@+id/actvTenantName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="5.8"
                            android:background="@drawable/edittext_focude_effect"
                            android:digits="@string/tenantDigits"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="@integer/int_225"
                            android:nextFocusDown="@id/etvisitorEntrybuildingName"
                            android:padding="@dimen/dim_12"
                            android:singleLine="true"
                            android:textAppearance="@style/customMontserratRegular"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/etvisitorEntrytenantName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5.8"
                            android:background="@drawable/edittext_focude_effect"
                            android:editable="false"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:nextFocusDown="@id/etvisitorEntrybuildingName"
                            android:singleLine="true"
                            android:textAppearance="@style/customMontserratRegular"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_buildingName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_16"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="@integer/weightsum_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="4"
                            android:singleLine="false"
                            android:text="@string/visitorbuildingName"
                            android:textAppearance="@style/customMontserratRegular"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/etBuildingName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5.8"
                            android:background="@drawable/edittext_focude_effect"
                            android:digits="@string/tenantDigits"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:maxLength="@integer/int_225"
                            android:nextFocusDown="@id/etvisitorEntrycomplexName"
                            android:singleLine="true"
                            android:textAppearance="@style/customMontserratRegular"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/etvisitorEntrybuildingName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5.8"
                            android:background="@drawable/edittext_focude_effect"
                            android:editable="false"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:nextFocusDown="@id/etvisitorEntrycomplexName"
                            android:singleLine="true"
                            android:textAppearance="@style/customMontserratRegular"
                            android:visibility="gone" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="4"
                            android:singleLine="false"
                            android:text="@string/first_name"
                            android:textAppearance="@style/customMontserratRegular"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/etvisitorEntryFirstName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="6"
                            android:background="@drawable/edittext_focude_effect"
                            android:digits="@string/visitor_name_digits"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:nextFocusDown="@id/etvisitorEntryLastName"
                            android:singleLine="true"
                            android:textAppearance="@style/customMontserratRegular" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="2dp"
                            android:layout_marginBottom="16dp"
                            android:layout_weight="0.2"
                            android:text="*"
                            android:textAlignment="center"
                            android:textColor="@color/blueColor" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="4"
                            android:singleLine="false"
                            android:text="@string/last_name"
                            android:textAppearance="@style/customMontserratRegular"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/etvisitorEntryLastName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="6"
                            android:background="@drawable/edittext_focude_effect"
                            android:digits="@string/visitor_name_digits"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:nextFocusDown="@id/actvVisitorEntryIsd"
                            android:singleLine="true"
                            android:textAppearance="@style/customMontserratRegular" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="2dp"
                            android:layout_marginBottom="16dp"
                            android:layout_weight="0.2"
                            android:text="*"
                            android:textAlignment="center"
                            android:textColor="@color/blueColor"
                            android:visibility="gone" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_VisitorMobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_16"
                        android:orientation="horizontal"
                        android:weightSum="@integer/weightsum_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="4"
                            android:singleLine="false"
                            android:text="@string/cell_number"
                            android:textAppearance="@style/customMontserratRegular"
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:id="@+id/llVisitorFlagIsd"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dim_4"
                            android:layout_weight="3"
                            android:background="@drawable/edittext_focude_effect_for_isd"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:weightSum="1">

                            <ImageView
                                android:id="@+id/ivVisitorEntryIsdFlag"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.4"
                                app:srcCompat="@drawable/ic_india" />


                            <AutoCompleteTextView
                                android:id="@+id/actvVisitorEntryIsd"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.6"
                                android:background="@null"
                                android:gravity="center"
                                android:imeOptions="actionNext"
                                android:inputType="phone"
                                android:maxLength="@integer/isdMaxLength"
                                android:nextFocusDown="@id/etvisitorEntryMobileNo"
                                android:singleLine="true"
                                android:text="+91"
                                android:textAlignment="center"
                                android:textAppearance="@style/customMontserratRegular"
                                android:visibility="visible" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/etvisitorEntryMobileNo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="3"
                            android:background="@drawable/edittext_focude_effect"
                            android:imeOptions="actionNext"
                            android:inputType="phone"
                            android:nextFocusDown="@id/etvisitorEntryEmail"
                            android:singleLine="true"
                            android:textAppearance="@style/customMontserratRegular" />

                        <TextView
                            android:id="@+id/tvMobileStarVisitor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="2dp"
                            android:layout_marginBottom="16dp"
                            android:layout_weight="0.2"
                            android:text="*"
                            android:textAlignment="center"
                            android:textColor="@color/blueColor"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_VisitorEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:weightSum="@integer/weightsum_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="4"
                            android:singleLine="false"
                            android:text="@string/emaill"
                            android:textAppearance="@style/customMontserratRegular"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/etvisitorEntryEmail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:background="@drawable/edittext_focude_effect"
                            android:digits="@string/emailDigits"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:nextFocusDown="@id/etvisitorEntryCompanyName"
                            android:singleLine="true"
                            android:textAppearance="@style/customMontserratRegular" />

                        <TextView
                            android:id="@+id/tvEmailStarVisitor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="2dp"
                            android:layout_marginBottom="16dp"
                            android:layout_weight="0.5"
                            android:text="*"
                            android:textAlignment="center"
                            android:textColor="@color/blueColor" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="@integer/weightsum_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="4"
                            android:singleLine="false"
                            android:text="@string/company"
                            android:textAppearance="@style/customMontserratRegular"
                            android:textColor="#000" />

                        <EditText
                            android:id="@+id/etvisitorEntryCompanyName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5.8"
                            android:background="@drawable/edittext_focude_effect"
                            android:digits="@string/companyDigits"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:nextFocusDown="@id/actv_visitorEntrypersonToMeet"
                            android:singleLine="true"
                            android:textAppearance="@style/customMontserratRegular" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginBottom="16dp"
                            android:layout_weight="0.5"
                            android:text="*"
                            android:textAlignment="center"
                            android:textColor="@color/blueColor" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:weightSum="@integer/weightsum_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="4"
                            android:singleLine="false"
                            android:text="@string/host_name"
                            android:textAppearance="@style/customMontserratRegular"
                            android:textColor="@color/black" />

                        <AutoCompleteTextView
                            android:id="@+id/actv_visitorEntrypersonToMeet"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="6"
                            android:background="@drawable/edittext_focude_effect"
                            android:digits="@string/visitorNameDigits"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:singleLine="true"
                            android:textAppearance="@style/customMontserratRegular" />

                        <TextView
                            android:id="@+id/tvPersontoMeetStar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="2dp"
                            android:layout_marginBottom="16dp"
                            android:layout_weight="0.5"
                            android:text="*"
                            android:textAlignment="center"
                            android:textColor="@color/blueColor" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llPersonToMeet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="@integer/weightsum_10">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvVisitorEntryPersonToMeet"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="9.8"
                            android:background="@drawable/custom_recyclerview" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="@integer/weightsum_10">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvVisitorEntryQuestions"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="9.8" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_Visitor_AuthenticationKey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_16"
                        android:orientation="horizontal"
                        android:weightSum="@integer/weightsum_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="4"
                            android:singleLine="false"
                            android:text="@string/authenticatioKey"
                            android:textAppearance="@style/customMontserratRegular"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/etAuthenticationKey_visitorEntryTwo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:background="@drawable/edittext_focude_effect"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="@integer/otpLength"
                            android:singleLine="true"
                            android:textAppearance="@style/customMontserratRegular"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="2dp"
                            android:layout_marginBottom="16dp"
                            android:layout_weight="0.2"
                            android:text="*"
                            android:textColor="@color/blueColor"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_bypassOrReset"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_16"
                        android:orientation="horizontal"
                        android:weightSum="@integer/weightsum_10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:orientation="horizontal" />


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_weight="5.8"
                            android:weightSum="10"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnBypass_visitorEntryTwo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="5"
                                android:layout_marginRight="5dp"
                                android:background="@color/resendOtp"
                                android:text="@string/bypass"
                                android:textAlignment="center"
                                android:textAppearance="@style/customMontserratRegular"
                                android:textColor="@color/white" />

                            <Button
                                android:id="@+id/btnResendKey_visitorEntryTwo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="5"
                                android:layout_marginLeft="5dp"
                                android:background="@color/resendOtp"
                                android:text="@string/resendotp"
                                android:textAlignment="center"
                                android:textAppearance="@style/customMontserratRegular"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="@integer/weightsum_10">

                        <TableLayout
                            android:id="@+id/tableQuestion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dim_16"
                        android:orientation="horizontal"
                        android:weightSum="@integer/weightsum_10">

                        <Button
                            android:id="@+id/btn_AddDetails"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/dim_10"
                            android:layout_weight="5"
                            android:background="@color/blueColor"
                            android:gravity="center"
                            android:text="@string/additional_details"
                            android:textAlignment="center"
                            android:textAppearance="@style/customMontserratBold"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/btn_ScanDL"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dim_10"
                            android:layout_weight="5"
                            android:background="@color/blueColor"
                            android:gravity="center"
                            android:visibility="visible"
                            android:text="@string/scan_dl"
                            android:textAlignment="center"
                            android:textAppearance="@style/customMontserratBold"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llAddReAuth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_16"
                        android:gravity="center"
                        android:weightSum="10"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/dim_10"
                            android:layout_weight="5"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <Button
                                android:id="@+id/btn_AddMulti"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.7"
                                android:background="@drawable/grey_bg"
                                android:gravity="center"
                                android:text="@string/btn_text_add"
                                android:textAlignment="center"
                                android:textAppearance="@style/customMontserratBold"
                                android:textColor="@color/blueColor"
                                android:textSize="18sp" />


                            <Button
                                android:id="@+id/btn_Plus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.3"
                                android:background="@color/versionTextColor"
                                android:gravity="center"
                                android:text="+"
                                android:textAlignment="center"
                                android:textAppearance="@style/customMontserratBold"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llbtnReAuth"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dim_10"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="1">

                            <Button
                                android:id="@+id/btnReAuthenticate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@color/colorAccent"
                                android:text="@string/re_authenticate"
                                android:textAllCaps="true"
                                android:textAppearance="@style/customMontserratBold"
                                android:textColor="@color/logintxtColor" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="@integer/weightsum_1">


                        <Button
                            android:id="@+id/btnSubmit_visitorEntryTwo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.4"
                            android:background="@color/loginBtn"
                            android:text="@string/check_in"
                            android:textAllCaps="true"
                            android:textAppearance="@style/customMontserratBold"
                            android:textColor="@color/logintxtColor" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvSexualOffendMatch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dim_10"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:text="@string/sexual_offender_match_found"
                        android:textAppearance="@style/customMontserratLight"
                        android:textColor="@color/errorcolor"
                        android:visibility="gone" />


                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>