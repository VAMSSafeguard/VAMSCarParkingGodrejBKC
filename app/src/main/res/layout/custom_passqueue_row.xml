<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llMainlogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dim_16"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cvProfileLogout"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:src="@drawable/profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvGuestName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textAppearance="@style/customMontserratRegular"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvGuestNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textAppearance="@style/customMontserratRegular"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvGuestEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textAppearance="@style/customMontserratRegular"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvGuestCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textAppearance="@style/customMontserratRegular"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvGuestAccess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textAppearance="@style/customMontserratRegular"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvLogoutPersonToMeet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:singleLine="false"
                android:textAppearance="@style/customMontserratRegular"
                android:textSize="18sp"
                android:visibility="gone" />


            <!--<TextView
                android:id="@+id/tvLogoutLoginTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textAppearance="@style/customMontserratRegular"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvLogoutTenantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textAppearance="@style/customMontserratRegular"
                android:textSize="18sp"
                android:visibility="gone" />-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnGuestPrintPass"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorAccent"
                    android:textSize="12sp"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:text="@string/login"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvGuestStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:textAppearance="@style/customMontserratRegular"
                    android:textSize="18sp"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/llMainlogout"
        android:layout_marginTop="@dimen/dim_16"
        android:background="@color/black" />

</RelativeLayout>