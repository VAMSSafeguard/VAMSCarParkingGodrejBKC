<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dim_10"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvHeader"
            style="@style/customMontserratSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:layout_weight="1"
            android:text="@string/nda_title"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />


        <ImageView
            android:id="@+id/iv_nda_Cancel"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:tint="@color/colorAccent"
            android:src="@drawable/green_cancel" />

    </RelativeLayout>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_top"
        android:layout_marginBottom="@dimen/dim_8"
        android:background="@color/gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divider"
        android:layout_above="@+id/fl_sign"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <WebView
            android:id="@+id/nda_wv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:fillViewport="true"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_sign"
        android:layout_above="@+id/btnNDAConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/sign_ll"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_bg"
            android:orientation="vertical" />

        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/dim_10"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dim_10"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_clear" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_marginTop="@dimen/dim_10"
            android:text="Signature"/>
    </FrameLayout>
    <Button
        android:id="@+id/btnNDAConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/loginBtn"
        android:text="@string/i_agree"
        android:layout_marginLeft="@dimen/dimen_50"
        android:layout_marginRight="@dimen/dimen_50"
        android:layout_marginTop="@dimen/dim_10"
        android:textAllCaps="true"
        android:textAppearance="@style/customMontserratBold"
        android:textColor="@color/logintxtColor"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>