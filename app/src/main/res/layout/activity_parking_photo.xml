<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_visitorEntryActivityOne"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_visitorEntryActivityOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_visitorEntryActivityOne"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="@dimen/abc_action_bar_default_height_material">
            <!--<ImageView
                android:id="@+id/placeSelectionActivityBackImage"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:src="@drawable/back" />-->
            <ImageView
                android:id="@+id/ivLogo_visitorEntryActivity"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_godrejlogo" />

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_gravity="start"
                android:src="@drawable/back"
                android:tint="@color/colorAccent" />
            <ImageView
                android:id="@+id/ivSos"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:visibility="gone"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_sos" />

        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_visitorEntryActivityOne"
        android:background="@color/white"
        android:gravity="top"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_takeImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/civCaptureimage"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:padding="5dp"
                            android:src="@drawable/capture_with_blue_background" />




                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:id="@+id/ll_complexName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_16"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="@integer/weightsum_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="4"
                            android:editable="false"
                            android:singleLine="false"
                            android:text="@string/visitorcomplexName"
                            android:textAppearance="@style/customMontserratRegular"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/etvisitorEntrycomplexName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5.8"
                            android:background="@drawable/edittext_focude_effect"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:nextFocusDown="@id/etvisitorEntryFirstName"
                            android:singleLine="true"
                            android:textAppearance="@style/customMontserratRegular" />
                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">


                        <Button
                            android:id="@+id/btnCheckIn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.5"
                            android:background="@color/loginBtn"
                            android:text="@string/checkin"
                            android:textAllCaps="true"
                            android:textAppearance="@style/customMontserratBold"
                            android:textColor="@color/logintxtColor" />

                        <Button
                            android:id="@+id/btnSkip"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.5"
                            android:layout_marginLeft="10dp"
                            android:background="@color/forgotTextcolor"
                            android:text="@string/skip"
                            android:visibility="gone"
                            android:textAllCaps="true"
                            android:textAppearance="@style/customMontserratBold"
                            android:textColor="@color/logintxtColor" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dim_16"
                        android:gravity="center"
                        android:weightSum="3.5"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgvCapture1"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:background="@color/white"
                            android:layout_height="match_parent"></ImageView>

                        <ImageView
                            android:id="@+id/imgvCapture2"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:background="@color/white"
                            android:layout_height="match_parent"></ImageView>

                        <ImageView
                            android:id="@+id/imgvCapture3"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:background="@color/white"
                            android:layout_height="match_parent"></ImageView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dim_16"
                        android:gravity="center"
                        android:weightSum="3.5"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgvCapture4"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:background="@color/white"
                            android:layout_height="match_parent"></ImageView>

                        <ImageView
                            android:id="@+id/imgvCapture5"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:background="@color/white"
                            android:layout_height="match_parent"></ImageView>

                        <ImageView
                            android:id="@+id/imgvCapture6"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:background="@color/white"
                            android:layout_height="match_parent"></ImageView>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>