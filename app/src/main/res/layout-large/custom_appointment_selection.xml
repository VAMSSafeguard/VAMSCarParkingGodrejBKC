<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llMainSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/blueColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvPersonToMeetSelection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="@style/customMontserratRegular"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvStartTimeSelection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="@style/customMontserratRegular"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvEndTimeSelection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAppearance="@style/customMontserratRegular"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvTenantNameSelection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="@style/customMontserratRegular"
                android:textSize="18sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnSelectSelection"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_margin="16dp"
                android:background="@color/orange"
                android:text="@string/select"
                android:textAllCaps="false"
                android:textAppearance="@style/customMontserratRegular"
                android:textColor="@color/white"/>
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_below="@+id/llMainSelection"/>

</RelativeLayout>