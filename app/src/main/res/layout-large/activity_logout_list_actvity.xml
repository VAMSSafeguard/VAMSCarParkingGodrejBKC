<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.vams.zktecoedu.reception.Activity.LogoutListActvity">

    <LinearLayout
        android:id="@+id/ll_toolbar_LogoutActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_logoutList"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="@dimen/abc_action_bar_default_height_material">

            <ImageView
                android:id="@+id/ivBackImage_Logout"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:src="@drawable/back" />

            <ImageView
                android:id="@+id/ivLogo_logoutActivity"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/zkteco_logo" />

            <ImageView
                android:id="@+id/ivReset_Logout"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:src="@drawable/reset" />
            <ImageView
                android:id="@+id/ivSos"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_sos" />


        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ll_toolbar_LogoutActivity"
        android:background="@color/light_gray"
        android:focusableInTouchMode="true"
        android:weightSum="1">


        <EditText
            android:id="@+id/etSearchBar"
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="10"
            android:paddingLeft="5dp"
            android:background="@drawable/edittext_bg_default"
            android:hint="@string/visitor_name_mobile_email_access_card_no"
            android:inputType="textPersonName"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/ivLogoutScanner"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:src="@drawable/barcode"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tvNoDataFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="@string/no_data_found"
        android:textAlignment="center"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLogoutList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_searchBar"
        android:visibility="gone" />


</RelativeLayout>
