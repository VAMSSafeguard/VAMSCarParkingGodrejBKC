<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_preAppintmentActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:padding="5dp"
                    android:text="@string/version"
                    android:textAppearance="@style/customMontserratRegular"
                    android:textColor="#000"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:padding="5dp"
                    android:text="@string/powered_by"
                    android:textAppearance="@style/customMontserratRegular"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/vams_powered_by_banner" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/preAppointmentToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="@dimen/abc_action_bar_default_height_material">

            <ImageView
                android:id="@+id/imageViewSetting"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:tint="@color/colorAccent"
                android:src="@drawable/ic_setting" />


            <ImageView
                android:id="@+id/homeScreenLogout"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:scaleType="fitCenter"
                android:src="@drawable/logout"
                android:tint="@color/colorAccent" />

            <ImageView
                android:id="@+id/ivUserLogo_HomeSceenActivity"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_godrejlogo" />

            <ImageView
                android:id="@+id/ivPerAppointmentLanguage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/toolbar"
                android:layout_alignStart="@+id/toolbar"
                android:layout_alignLeft="@+id/toolbar"
                android:layout_gravity="end"
                android:padding="16dp"
                android:src="@drawable/ic_drop"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/ivSos"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_sos" />


            <TextView
                android:id="@+id/tvPerAppointmentLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:layout_alignStart="@+id/toolbar"
                android:layout_alignLeft="@+id/toolbar"
                android:layout_gravity="end"
                android:enabled="false"
                android:text="EN"
                android:textAppearance="@style/customMontserratRegular"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="gone" />
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <ScrollView
        android:id="@+id/sc_Main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/ll_toolbar"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_50"
                android:layout_marginBottom="@dimen/dimen_50"
                android:layout_marginLeft="@dimen/dim_25"
                android:layout_marginRight="@dimen/dim_25"
                android:orientation="vertical"
                android:padding="@dimen/dim_25">



                <LinearLayout
                    android:id="@+id/llparkCheckin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_home"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="0.40"
                        android:padding="25dp"
                        android:src="@drawable/visitor_entry"
                        android:tint="@color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.60"
                        android:gravity="center"
                        android:text="@string/park_check_in"
                        android:textColor="@color/white"
                        android:textAppearance="@style/customMontserratSemiBold"
                        android:textSize="18sp" />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/llparkcheckout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_home"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="0.40"
                        android:padding="25dp"
                        android:src="@drawable/visitorlogout"
                        android:tint="@color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.60"
                        android:gravity="center"
                        android:text="@string/park_check_out"
                        android:textColor="@color/white"
                        android:textAppearance="@style/customMontserratSemiBold"
                        android:textSize="18sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llVisitorCheckIn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_home"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="0.40"
                        android:padding="25dp"
                        android:src="@drawable/visitor_entry"
                        android:tint="@color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.60"
                        android:gravity="center"
                        android:text="@string/visitor_check_in"
                        android:textColor="@color/white"
                        android:textAppearance="@style/customMontserratSemiBold"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llScheduleAppointment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_home"
                    android:orientation="horizontal"
                    android:weightSum="@integer/weightsum_1">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.40"
                        android:padding="20dp"
                        android:src="@drawable/is_schedule"
                        android:tint="@color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.60"
                        android:gravity="center"
                        android:text="@string/scheduled_Appointment"
                        android:textColor="@color/white"
                        android:textAppearance="@style/customMontserratSemiBold"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llChildPickup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_home"
                    android:orientation="horizontal"
                    android:weightSum="@integer/weightsum_1">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.40"
                        android:padding="20dp"
                        android:src="@drawable/ic_child"
                        android:tint="@color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.60"
                        android:gravity="center"
                        android:text="@string/student_pick_up"
                        android:textColor="@color/white"
                        android:textAppearance="@style/customMontserratSemiBold"
                        android:textSize="18sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llContractorCheckInOut"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_home"
                    android:orientation="horizontal"
                    android:weightSum="@integer/weightsum_1">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.40"
                        android:padding="20dp"
                        android:src="@drawable/contract_worker"
                        android:tint="@color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.60"
                        android:gravity="center"
                        android:text="@string/contractor_check_in"
                        android:textColor="@color/white"
                        android:textAppearance="@style/customMontserratSemiBold"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llVisitorCheckOut"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_home"
                    android:orientation="horizontal"
                    android:weightSum="@integer/weightsum_1">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.40"
                        android:padding="25dp"
                        android:src="@drawable/visitorlogout"
                        android:tint="@color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.60"
                        android:gravity="center"
                        android:text="@string/visitor_check_out"
                        android:textColor="@color/white"
                        android:textAppearance="@style/customMontserratSemiBold"
                        android:textSize="18sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llVisitorBadge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_home"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="@integer/weightsum_1">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.40"
                        android:padding="20dp"
                        android:src="@drawable/contract_worker"
                        android:tint="@color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.60"
                        android:gravity="center"
                        android:text="@string/btn_visitorbadge"
                        android:textColor="@color/white"
                        android:textAppearance="@style/customMontserratSemiBold"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>
