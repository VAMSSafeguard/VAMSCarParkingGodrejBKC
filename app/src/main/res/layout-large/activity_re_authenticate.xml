<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_visitorEntryActivityOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_visitorEntryActivityOne"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="@dimen/abc_action_bar_default_height_material">

            <ImageView
                android:id="@+id/imgBackImage"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:src="@drawable/back" />

            <ImageView
                android:id="@+id/ivLogo_reAuthenticateActivity"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/zkteco_logo" />
            <ImageView
                android:id="@+id/ivSos"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_sos" />

        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_visitorEntryActivityOne"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="8dp">


        <ScrollView
            android:id="@+id/scv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_Image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dim_8"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgAuthenticate"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:padding="@dimen/dim_16"
                        android:src="@drawable/profile" />
                    <!--<ImageView
                        android:id="@+id/iv_camera"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/capture"
                        android:layout_gravity="top|right"
                        />-->
                    <TextView
                        android:id="@+id/tvTakePhotoTextVisitorEntry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="gone"
                        android:text="@string/take_photo"
                        android:textAlignment="center"
                        android:textColor="@color/blueColor"
                        android:textSize="20sp"></TextView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:id="@+id/ll_ReAuthMobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_16"
                        android:orientation="horizontal"
                        android:weightSum="@integer/weightsum_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="4"
                            android:singleLine="false"
                            android:text="@string/cell_number"
                            android:textAppearance="@style/customMontserratRegular"
                            android:textColor="@color/black"/>

                        <LinearLayout
                            android:id="@+id/llAuthFlagIsd"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:background="@drawable/edittext_focude_effect_for_isd"
                            android:weightSum="1">

                        <ImageView
                            android:id="@+id/ivIsdFlag"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0.4"
                            app:srcCompat="@drawable/ic_india" />


                        <AutoCompleteTextView
                            android:id="@+id/actvIsd"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:background="@null"
                            android:imeOptions="actionNext"
                            android:inputType="phone"
                            android:maxLength="@integer/isdMaxLength"
                            android:nextFocusDown="@id/etvisitorEntryMobileNo"
                            android:singleLine="true"
                            android:text="+91"
                            android:textAlignment="center"
                            android:textAppearance="@style/customMontserratRegular"
                            android:textSize="20sp" />
                        </LinearLayout>


                        <EditText
                            android:id="@+id/etMobileNo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="3.5"
                            android:background="@drawable/edittext_focude_effect"
                            android:imeOptions="actionNext"
                            android:inputType="phone"
                            android:nextFocusDown="@id/etvisitorEntryEmail"
                            android:singleLine="true"
                            android:textAppearance="@style/customMontserratRegular"
                            android:textSize="20sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_ReAuthEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:weightSum="@integer/weightsum_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="4"
                            android:singleLine="false"
                            android:text="@string/emaill"
                            android:textAppearance="@style/customMontserratRegular"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/etReAuthEmail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:background="@drawable/edittext_focude_effect"
                            android:digits="@string/emailDigits"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:maxLength="@integer/email_length"
                            android:nextFocusDown="@id/etvisitorEntryCompanyName"
                            android:singleLine="true"
                            android:textAppearance="@style/customMontserratRegular"
                            android:textSize="20sp" />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="4"
                            android:singleLine="false"
                            android:text="@string/first_name"
                            android:textAppearance="@style/customMontserratRegular"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/etFirstName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="6"
                            android:background="@drawable/edittext_focude_effect"
                            android:digits="@string/visitor_name_digits"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:nextFocusDown="@id/etLastName"
                            android:singleLine="true"
                            android:textAppearance="@style/customMontserratLight" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="@integer/weightsum_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="4"
                            android:singleLine="false"
                            android:text="@string/last_name"
                            android:textAppearance="@style/customMontserratRegular"
                            android:textColor="#000" />

                        <EditText
                            android:id="@+id/etLastName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="6"
                            android:background="@drawable/edittext_focude_effect"
                            android:digits="@string/companyDigits"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:singleLine="true"
                            android:textAppearance="@style/customMontserratLight" />


                    </LinearLayout>




                    <LinearLayout
                        android:id="@+id/llSmsKey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:weightSum="@integer/weightsum_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="4"
                            android:singleLine="false"
                            android:text="@string/authenticatioKey"
                            android:textAppearance="@style/customMontserratRegular"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/etReAuthenticateKey"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dim_4"
                            android:layout_weight="6"
                            android:background="@drawable/edittext_focude_effect"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="@integer/otpLength"
                            android:singleLine="true"
                            android:textAppearance="@style/customMontserratLight"
                            android:textSize="20sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="18dp"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <Button
                            android:id="@+id/btnResendKey"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dim_10"
                            android:layout_marginRight="@dimen/dim_10"
                            android:layout_weight="0.5"
                            android:background="@color/colorPrimaryDark"
                            android:text="@string/resendotp"
                            android:textAppearance="@style/customMontserratBold"
                            android:textColor="@color/logintxtColor" />

                        <Button
                            android:id="@+id/btnDeleteRegistration"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dim_10"
                            android:layout_marginRight="@dimen/dim_10"
                            android:layout_weight="0.5"
                            android:background="@color/loginBtn"
                            android:text="@string/re_authenticate"
                            android:textAppearance="@style/customMontserratBold"
                            android:textColor="@color/logintxtColor" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>